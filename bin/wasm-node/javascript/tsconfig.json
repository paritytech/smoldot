{
    "compilerOptions": {
        "lib": [
            "es2020"
        ],
        "target": "es2020",
        "module": "es2020",
        "outDir": "./dist",
        "declaration": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,

        "strict": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noImplicitReturns": true,
        "noPropertyAccessFromIndexSignature": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "src/**/*"
    ]
}
